<meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
<style >
  .input100 {
    width: 100%;
  }
</style>

    <div class="container-login100">
      <div class="wrap-login100">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: 'login100-form validate-form' }) do |f| %>
          <span class="login100-form-title p-b-26">
            <img src="<%= asset_path 'logo.png' %>" style="width: 50%;height: 50%;" ><br>
            Daftar
            <p>
            <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
            <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
            <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
            </p>
          </span>
          <span class="login100-form-title p-b-48">
            <i class="zmdi zmdi-font"></i>
          </span>

          <!-- <div class="" data-validate = "Valid email is: a@b.c">
            <input class="input100" type="text" name="email">
            <span class="focus-input100" data-placeholder="Email"></span>
          </div> -->

          <div class="wrap-input100 validate-input">
            <%= f.text_field :firstname, class: 'input100', placeholder: 'Firstname'%>
            <!-- <span class="focus-input100" data-placeholder="firstname"></span> -->
          </div>

          <div class="wrap-input100 validate-input">
            <%= f.text_field :lastname, class: 'input100', placeholder: 'lastname'%>
          </div>

          <div class="wrap-input100 validate-input">
            <%= f.select :major_id, Major.all.collect {|m| [ m.name, m.id ] }, { :include_blank => "Pilih Kelas anda" }, { :class => "input100" } %>
            <!-- <span class="focus-input100" data-placeholder="lastname"></span> -->
          </div>

          <div class="wrap-input100 validate-input">
             <%= f.select :pendamping_laporan_id, PendampingLaporan.all.collect {|m| [ m.name, m.id ] }, { :include_blank => "Pilih Pendamping Laporan" }, { :class => "input100" } %>
            <!-- <span class="focus-input100" data-placeholder="lastname"></span> -->
          </div>

          <div class="wrap-input100 validate-input">
            <%= f.email_field :email, class: 'input100', placeholder: 'Email'%>
          </div>

          <div class="wrap-input100 validate-input">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: 'input100', autocomplete: "new-password", placeholder: 'Password' %>
          </div>

          <div class="wrap-input100 validate-input">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: 'Konfirmasi Password'%>
          </div>

          <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
              <div class="login100-form-bgbtn"></div>
              <div class="actions">
              <%= f.submit "Sign up", :class => 'login100-form-btn signup'%>
            </div>
            </div>
          </div>

          <div class="text-center p-t-115">
            <span class="txt1">
              Sudah Punya Akun?
            </span>

            <a class="txt2" href="/users/sign_in">
              Sign in
            </a>
          </div>
        <% end %>
      </div>
    </div>