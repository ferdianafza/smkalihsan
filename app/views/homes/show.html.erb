<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 50%;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
  border: 1px solid #ddd;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}
</style>
<center>

<div class="card">
  <img src="<%= asset_path 'avatar.jpg'%>" alt="Avatar" style="width:100%">
  <div class="container">
    <h4><b><%= current_user.firstname %><%= current_user.lastname %></b></h4>
    <p><%= current_user.major.name %></p>
  </div>
</div>
<br>
<div style="overflow-x:auto;">
  <table>
    <tr>
      <th>Id Laporan</th>
      <th>Tanggal</th>
      <th>Subuh</th>
      <th>Dhuha</th>
      <th>Tadarus</th>
      <th>Keterangan</th>
      <th>Dokumentasi</th>
    </tr>
    <% @laporan.each do |lp| %>
    <tr>
      <td><%= lp.id %></td>
      <td><%= lp.tanggal %></td>
      <td><%= lp.subuh %></td>
      <td><%= lp.dhuha %></td>
      <td><%= lp.tadarus %></td>
      <td><%= lp.keterangan %></td>
      <td>
          <% if lp.documentations.attached? %>
            <% lp.documentations.each do |img| %>
                <%= image_tag url_for(img), width: "70", heigth: "70"%>
            <% end %>
          <% end %>
        </td>
    </tr>
    <% end %>
  </table>
</div>
</center>