<meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    .absen {
      background-color: transparent;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      width: 100%;
    }

    .button{
      background-color: #bbbbbb;
      /*add any other properties you want to style*/
    }

    #tombol {
      background-color: red;
    }
    #tombol:hover {
      background-color: blue;
    }
    #tgl {
      width: 100%;
    }

  </style>
<div class="container">
  <%= form_with(model: daily_report, local: true) do |form| %>

  <div class="field" hidden="" >
    <%= form.text_field :user_id, :value => current_user.id%>
  </div>

  <div class="field" hidden="" >
    <%= form.text_field :major_id, :value => current_user.major_id %>
  </div>

  <div class="field" hidden="" >
    <%= form.text_field :pendamping_laporan_id, :value => current_user.pendamping_laporan_id %>
  </div>

  <div class="form-group">
    <label for="subuh">Tanggal:</label>
        <%= form.date_field :tanggal, data:{ provide:'datepicker' }, :required => true, id: 'tgl'%>
  </div>


  <div class="form-group">
    <label for="subuh">Subuh:</label>
    <%= form.text_field :subuh, class: 'form-control', placeholder: '04:50', style: 'width:100%;', :required => true %>
  </div>

  <div class="form-group">
    <label for="subuh">Dhuha:</label>
    <%= form.text_field :dhuha, class: 'form-control', placeholder: '08:50', style: 'width:100%;', :required => true %>
  </div>

  <div class="form-group">
    <label for="subuh">Tadarus:</label>
    <%= form.text_field :tadarus, class: 'form-control', placeholder: 'Misal An-Naba 1-20', style: 'width:100%;', :required => true %>
  </div>

  <div class="form-group">
    <label for="subuh">Dokumentasi Harian:</label>
        <%= form.file_field :documentations, multiple: true, class: 'form-control', placeholder: 'Foto Dalam Bentuk Kolase', style: 'width:100%;', :required => true  %>
  </div>

  <div class="form-group">
    <label for="subuh">Keterangan:</label>
    <%= form.text_field :keterangan, class: 'form-control', placeholder: 'kalau sedang halangan isi haid', style: 'width:100%;', :required => true %>
  </div>

  <div class="actions">
    <%= form.submit "Absen", :class => "button btn btn-success absen", :id => "tombol", style: 'background-color:transparent;' %>
  </div>
  <% end %>
</div>
